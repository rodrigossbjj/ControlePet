@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controle de Pet</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="icon" type="image/jpeg" href="/assets/images/icon.jpeg">

    <style>
        body {  
            background-color: #95ADD3;
            background-image: url('/assets/images/pata.jpeg'), url('/assets/images/pata.jpeg'), url('/assets/images/pata.jpeg'), url('/assets/images/pata.jpeg');
            background-repeat: no-repeat;
            background-position: top left, top right, bottom left, bottom right;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-card {
            background-color: #f2f2f2;
            border-radius: 20px;
            box-shadow: 10px 10px 30px rgba(0, 0, 0, 0.4);
            width: 350px;
        }

        .icon-input {
            position: relative;
        }

            .icon-input svg {
                position: absolute;
                bottom: 0;
                left: 5px;
                transform: translateY(-50%);
                height: 20px;
                color: white;
                width: 2em;
            }

            .icon-input .eye {
                right: 5px;
                margin-left: auto;
            }

        .btn-custom {
            background-color: #5E8FCF;
            border: none;
            border-radius: 10px;
            margin-top: 5px;
            color: white;
        }

            .btn-custom:hover {
                background-color: #4D7BB8;
                transform: translateY(-2px); /* Efeito de levitação */
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                color: dimgray;
            }

        .forgot {
            font-size: 0.9rem;
            text-align: left;
            display: block;
            margin-bottom: 15px;
        }

        .paw-heart {
            text-align: center;
            margin-bottom: 20px;
        }

            .paw-heart svg {
                width: 80px;
                height: 80px;
            }

        .text-white {
            --bs-text-opacity: 1;
            color: rgba(var(--bs-white-rgb), var(--bs-text-opacity)) !important;
            padding-left: 40px;
        }

        .text-white::placeholder {
            color: rgba(255,255,255,0.6); 
        }

    </style>
</head>
<body class="d-flex align-items-center justify-content-center vh-100">

    <div class="login-card p-4">
        <div class="paw-heart">
            <svg viewBox="0 0 163 150" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M118.854 0.708338C103.118 0.708338 89.3172 8.90592 81.5 21.1822C73.6828 8.90592 59.8821 0.708338 44.1458 0.708338C19.8045 0.708338 0 20.2698 0 44.3125C0 91.1568 76.7866 146.501 77.5608 147.044L81.4932 149.808L85.4324 147.051C112.266 128.281 163 82.6506 163 44.3058C163 20.2631 143.195 0.708338 118.854 0.708338ZM91.3275 47.7002C94.8185 48.1094 97.3178 52.0405 96.7745 57.9371C95.1512 72.1856 83.0213 70.3744 84.1284 56.4479C84.6785 50.5513 87.8366 47.291 91.3275 47.7002ZM71.5977 47.7002C75.0955 47.291 78.2536 50.5513 78.8037 56.4479C79.9175 70.361 67.7876 72.1923 66.1644 57.9371C65.6143 52.0472 68.0932 48.1161 71.5977 47.7002ZM51.0122 71.4477C50.4689 65.5578 52.9682 61.6267 56.4591 61.2108C59.95 60.8016 63.115 64.0618 63.6583 69.9585C64.7585 83.8716 52.6354 85.6962 51.0122 71.4477ZM93.9423 101.327C92.095 101.246 90.268 100.931 88.509 100.394C83.9586 98.9787 79.021 98.9787 74.4638 100.394C66.9998 102.829 60.833 100.434 61.1114 93.8334C61.125 84.0728 71.2106 74.4933 81.4864 74.4933C91.7622 74.4933 101.848 84.0728 101.848 93.8334C101.848 97.2547 100.476 101.327 93.9287 101.327H93.9423ZM98.5539 69.9518C99.104 64.0551 102.262 60.7949 105.753 61.2041C109.244 61.6133 111.743 65.5444 111.193 71.441C109.57 85.6895 97.4468 83.8783 98.5539 69.9518Z" fill="#5E8FCF" />
            </svg>
        </div>

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <form asp-action="Entrar" asp-controller="Login" method="post">
            <div class="mb-3 icon-input">
                <label aspfor="Usuario" class="form-label"><b>Usuário</b>:</label>
                <svg xmlns="http://www.w3.org/2000/svg" width="256" height="256" viewBox="0 0 256 256"><path fill="#fff" d="M234.38 210a123.36 123.36 0 0 0-60.78-53.23a76 76 0 1 0-91.2 0A123.36 123.36 0 0 0 21.62 210a12 12 0 1 0 20.77 12c18.12-31.32 50.12-50 85.61-50s67.49 18.69 85.61 50a12 12 0 0 0 20.77-12M76 96a52 52 0 1 1 52 52a52.06 52.06 0 0 1-52-52" /></svg>
                <input type="text" id="Usuario" name="Usuario" class="form-control bg-dark text-white" placeholder="Digite o nome de usuário aqui..." required />
            </div>

            <div class="mb-1 icon-input">
                <label aspfor="Senha" class="form-label"><b>Senha:</b></label>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><g fill="none"><path d="m12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035q-.016-.005-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427q-.004-.016-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093q.019.005.029-.008l.004-.014l-.034-.614q-.005-.018-.02-.022m-.715.002a.02.02 0 0 0-.027.006l-.006.014l-.034.614q.001.018.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z" /><path fill="#fff" d="M12 2a6 6 0 0 1 5.996 5.775L18 8h1a2 2 0 0 1 1.995 1.85L21 10v10a2 2 0 0 1-1.85 1.995L19 22H5a2 2 0 0 1-1.995-1.85L3 20V10a2 2 0 0 1 1.85-1.995L5 8h1a6 6 0 0 1 6-6m7 8H5v10h14zm-7 2a2 2 0 0 1 1.134 3.647l-.134.085V17a1 1 0 0 1-1.993.117L11 17v-1.268A2 2 0 0 1 12 12m0-8a4 4 0 0 0-4 4h8a4 4 0 0 0-4-4" /></g></svg>
                <input type="password" id="Senha" name="Senha" class="form-control bg-dark text-white" placeholder="Digite a senha aqui..." required />
                <svg class="eye" onclick = "togglePassword()" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="#fff" d="M11.83 9L15 12.16V12a3 3 0 0 0-3-3zm-4.3.8l1.55 1.55c-.05.21-.08.42-.08.65a3 3 0 0 0 3 3c.22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53a5 5 0 0 1-5-5c0-.79.2-1.53.53-2.2M2 4.27l2.28 2.28l.45.45C3.08 8.3 1.78 10 1 12c1.73 4.39 6 7.5 11 7.5c1.55 0 3.03-.3 4.38-.84l.43.42L19.73 22L21 20.73L3.27 3M12 7a5 5 0 0 1 5 5c0 .64-.13 1.26-.36 1.82l2.93 2.93c1.5-1.25 2.7-2.89 3.43-4.75c-1.73-4.39-6-7.5-11-7.5c-1.4 0-2.74.25-4 .7l2.17 2.15C10.74 7.13 11.35 7 12 7" /></svg>
            </div>

            <a asp-controller="RecuperacaoSenha" asp-action="Index" class="forgot text-muted">Esqueci minha senha </a>
            
            <button type="submit" class="btn btn-custom w-100 text-button-white">Entrar</button>
        </form>

        @if (ViewBag.Mensagem != null)
        {
            <p class="text-center mt-3 fw-bold" style="color: @(ViewBag.Mensagem.Contains("bem-sucedido") ? "green" : "red");">
                @ViewBag.Mensagem
            </p>
        }

        <partial name="_ValidationScriptsPartial" />
        <validation-summary class="text-danger" asp-validation-summary="All" />

    </div>


    <script>
        function togglePassword() {
            const senhaInput = document.getElementById('Senha');
            const eyeIcon = document.querySelector('.eye path');

            if (senhaInput.type === 'password') {
                senhaInput.type = 'text';
                eyeIcon.setAttribute('d', 'M12 9a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3m0 8a5 5 0 0 1-5-5a5 5 0 0 1 5-5a5 5 0 0 1 5 5a5 5 0 0 1-5 5m0-12.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5');
            } else {
                senhaInput.type = 'password';
                eyeIcon.setAttribute('d', 'M11.83 9L15 12.16V12a3 3 0 0 0-3-3zm-4.3.8l1.55 1.55c-.05.21-.08.42-.08.65a3 3 0 0 0 3 3c.22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53a5 5 0 0 1-5-5c0-.79.2-1.53.53-2.2M2 4.27l2.28 2.28l.45.45C3.08 8.3 1.78 10 1 12c1.73 4.39 6 7.5 11 7.5c1.55 0 3.03-.3 4.38-.84l.43.42L19.73 22L21 20.73L3.27 3M12 7a5 5 0 0 1 5 5c0 .64-.13 1.26-.36 1.82l2.93 2.93c1.5-1.25 2.7-2.89 3.43-4.75c-1.73-4.39-6-7.5-11-7.5c-1.4 0-2.74.25-4 .7l2.17 2.15C10.74 7.13 11.35 7 12 7');
            }
        }
    </script>

</body>
</html>
