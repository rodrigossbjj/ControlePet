@model ValidarCodigoModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Validar Código - Cuida Pet</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="icon" type="image/jpeg" href="/assets/images/icon.jpeg">

    <style>
        body {
            background-color: #95ADD3;
            background-image: url('/assets/images/pata.jpeg'), url('/assets/images/pata.jpeg'), url('/assets/images/pata.jpeg'), url('/assets/images/pata.jpeg');
            background-repeat: no-repeat;
            background-position: top left, top right, bottom left, bottom right;
            font-family: 'Segoe UI', sans-serif;
        }

        .code-card {
            background-color: #f2f2f2;
            border-radius: 20px;
            box-shadow: 10px 10px 30px rgba(0, 0, 0, 0.4);
            width: 350px;
        }

        .btn-custom {
            background-color: #5E8FCF;
            border: none;
            border-radius: 10px;
            margin-top: 5px;
            color: white;
        }

            .btn-custom:hover {
                background-color: #4D7BB8;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                color: dimgray;
            }

        .paw-heart {
            text-align: center;
            margin-bottom: 20px;
        }

            .paw-heart svg {
                width: 80px;
                height: 80px;
            }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center vh-100">

    <div class="code-card p-4">
        <div class="paw-heart">
            <svg viewBox="0 0 163 150" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M118.854 0.708338C103.118 0.708338 89.3172 8.90592 81.5 21.1822C73.6828 8.90592 59.8821 0.708338 44.1458 0.708338C19.8045 0.708338 0 20.2698 0 44.3125C0 91.1568 76.7866 146.501 77.5608 147.044L81.4932 149.808L85.4324 147.051C112.266 128.281 163 82.6506 163 44.3058C163 20.2631 143.195 0.708338 118.854 0.708338ZM91.3275 47.7002C94.8185 48.1094 97.3178 52.0405 96.7745 57.9371C95.1512 72.1856 83.0213 70.3744 84.1284 56.4479C84.6785 50.5513 87.8366 47.291 91.3275 47.7002ZM71.5977 47.7002C75.0955 47.291 78.2536 50.5513 78.8037 56.4479C79.9175 70.361 67.7876 72.1923 66.1644 57.9371C65.6143 52.0472 68.0932 48.1161 71.5977 47.7002ZM51.0122 71.4477C50.4689 65.5578 52.9682 61.6267 56.4591 61.2108C59.95 60.8016 63.115 64.0618 63.6583 69.9585C64.7585 83.8716 52.6354 85.6962 51.0122 71.4477ZM93.9423 101.327C92.095 101.246 90.268 100.931 88.509 100.394C83.9586 98.9787 79.021 98.9787 74.4638 100.394C66.9998 102.829 60.833 100.434 61.1114 93.8334C61.125 84.0728 71.2106 74.4933 81.4864 74.4933C91.7622 74.4933 101.848 84.0728 101.848 93.8334C101.848 97.2547 100.476 101.327 93.9287 101.327H93.9423ZM98.5539 69.9518C99.104 64.0551 102.262 60.7949 105.753 61.2041C109.244 61.6133 111.743 65.5444 111.193 71.441C109.57 85.6895 97.4468 83.8783 98.5539 69.9518Z" fill="#5E8FCF" />
            </svg>
        </div>

        @if (TempData["ErroValidacao"] is string mensagemErro)
        {
            <div class="alert alert-danger text-center">
                @mensagemErro
            </div>
        }

        <form asp-controller="RecuperacaoSenha" asp-action="ValidarCodigo" method="post">
            <div class="mb-3">
                <label asp-for="Codigo" class="form-label"><b>Código de verificação</b>:</label>
                <input asp-for="Codigo" class="form-control bg-dark text-white" placeholder="Digite o código recebido..." required autocomplete="off" />
            </div>

            <button type="submit" class="btn btn-custom w-100">Validar Código</button>
        </form>

        @if (TempData["MensagemSucesso"] != null)
        {
            <p class="text-success text-center mt-3 fw-bold">
                @TempData["MensagemSucesso"]
            </p>
        }
    </div>

</body>
</html>
