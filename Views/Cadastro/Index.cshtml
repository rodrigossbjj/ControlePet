@model CadastroModel
@{
    Layout = null;
}

<header>
    <link rel="stylesheet" href="~/css/styleCadastrar.css" />
</header>

<div class="top-links">
    <a asp-controller="PaginaInicial" asp-action="Index">Home</a>
</div>

<div class="register-container">
    <div class="logo">
        <img src="~/imagens/logo.png" alt="Logo">
    </div>
    <h1>Cadastro Completo - Sistema Veterinário</h1>

    <form asp-action="CadastrarUsuario" method="post">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Erros de validação:</strong>
                <ul>
                    @foreach (var entry in ViewData.ModelState)
                    {
                        foreach (var error in entry.Value.Errors)
                        {
                            <li><strong>@entry.Key</strong>: @error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        <div class="form-section">
            <h2>Dados Pessoais</h2>
            <div class="form-grid">
                <div class="input-group">
                    <label for="nome">Nome Completo*</label>
                    <input asp-for="Cliente.Cli_NomeCompleto" type="text" id="nome" placeholder="Digite seu nome completo" required>
                    <span asp-validation-for="Cliente.Cli_NomeCompleto" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label for="cpf">CPF*</label>
                    <input asp-for="Cliente.Cli_CPF" type="text" id="cpf" placeholder="Digite seu CPF" required>
                    <span asp-validation-for="Cliente.Cli_CPF" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label for="rg">RG</label>
                    <input asp-for="Cliente.Cli_RG" type="text" id="rg" placeholder="Digite seu RG">
                    <span asp-validation-for="Cliente.Cli_RG" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label for="data-nascimento">Data de Nascimento</label>
                    <input asp-for="Cliente.Cli_DataNascimento" type="date" id="data-nascimento">
                    <span asp-validation-for="Cliente.Cli_DataNascimento" class="text-danger"></span>
                </div>

                <div class="input-group full-width">
                    <label for="endereco">Endereço Residencial*</label>
                    <input asp-for="Cliente.Cli_EnderecoResidencial" type="text" id="endereco" placeholder="Digite seu endereço completo" required>
                    <span asp-validation-for="Cliente.Cli_EnderecoResidencial" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label for="telefone">Telefone*</label>
                    <input asp-for="Cliente.Cli_Telefone" type="tel" id="telefone" placeholder="Digite seu telefone" required>
                    <span asp-validation-for="Cliente.Cli_Telefone" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label for="celular">Celular</label>
                    <input asp-for="Cliente.Cli_Celular" type="tel" id="celular" placeholder="Digite seu celular">
                    <span asp-validation-for="Cliente.Cli_Celular" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h2>Dados Profissionais</h2>
            <div class="form-grid">
                <div class="input-group">
                    <label for="crmv">CRMV*</label>
                    <input asp-for="Cliente.Cli_CRMV" type="text" id="crmv" placeholder="Digite seu registro CRMV" required>
                    <span asp-validation-for="Cliente.Cli_CRMV" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label for="especialidade">Especialidade</label>
                    <select asp-for="Cliente.Cli_Especialidade" id="especialidade">
                        <option value="">Selecione sua especialidade</option>
                        <option value="clinica">Clínica Geral</option>
                        <option value="cirurgia">Cirurgia</option>
                        <option value="dermatologia">Dermatologia</option>
                        <option value="oftalmologia">Oftalmologia</option>
                        <option value="ortopedia">Ortopedia</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h2>Dados da Clínica Veterinária</h2>
            <div class="form-grid">
                <div class="input-group full-width">
                    <label for="clinica">Nome da Clínica Veterinária*</label>
                    <input asp-for="Clinica.Cln_Nome" type="text" id="clinica" placeholder="Digite o nome da clínica" required>
                    <span asp-validation-for="Clinica.Cln_Nome" class="text-danger"></span>
                </div>

                <div class="input-group full-width">
                    <label for="endereco-clinica">Endereço da Clínica*</label>
                    <input asp-for="Clinica.Cln_Endereco" type="text" id="endereco-clinica" placeholder="Digite o endereço completo da clínica" required>
                    <span asp-validation-for="Clinica.Cln_Endereco" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label for="cnpj">CNPJ*</label>
                    <input asp-for="Clinica.Cln_CNPJ" type="text" id="cnpj" placeholder="Digite o CNPJ da clínica" required>
                    <span asp-validation-for="Clinica.Cln_CNPJ" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label for="telefone-clinica">Telefone da Clínica*</label>
                    <input asp-for="Clinica.Cln_Telefone" type="tel" id="telefone-clinica" placeholder="Digite o telefone da clínica" required>
                    <span asp-validation-for="Clinica.Cln_Telefone" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label for="horario-funcionamento">Horário de Funcionamento</label>
                    <input asp-for="Clinica.Cln_HorarioFuncionamento" type="text" id="horario-funcionamento" placeholder="Ex: 08:00 às 18:00">
                    <span asp-validation-for="Clinica.Cln_HorarioFuncionamento" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label for="tipo-clinica">Tipo de Clínica</label>
                    <select asp-for="Clinica.Cln_Tipo" id="tipo-clinica">
                        <option value="">Selecione o tipo</option>
                        <option value="pequenos">Pequenos Animais</option>
                        <option value="grandes">Grandes Animais</option>
                        <option value="mista">Mista</option>
                        <option value="especializada">Especializada</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h2>Dados de Acesso</h2>
            <div class="form-grid">
                <div class="input-group">
                    <label for="email">E-mail*</label>
                    <input asp-for="Usuario.Us_Email" type="email" id="email" placeholder="Digite seu e-mail" required>
                </div>

                <div class="input-group">
                    <label for="confirm-email">Confirmar E-mail*</label>
                    <input asp-for="Usuario.Us_Email" type=" email" id="confirm-email" placeholder="Digite seu e-mail novamente" required>
                </div>

                <div class="input-group">
                    <label for="password">Senha*</label>
                    <input asp-for="Usuario.Us_SenhaHash" type="password" id="password" placeholder="Digite sua senha" required>
                </div>

                <div class="input-group">
                    <label for="confirm-password">Confirmar Senha*</label>
                    <input asp-for="Usuario.Us_SenhaHash" type="password" id="confirm-password" placeholder="Digite sua senha novamente" required>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h2>Termos e Condições</h2>
            <div class="input-group full-width">
                <div class="checkbox-group">
                    <input type="checkbox" id="termos" required>
                    <label for="termos">Li e concordo com os Termos de Uso e Política de Privacidade*</label>
                </div>
            </div>

            <div class="input-group full-width">
                <div class="checkbox-group">
                    <input type="checkbox" id="newsletter">
                    <label for="newsletter">Desejo receber novidades e promoções por e-mail</label>
                </div>
            </div>
        </div>

        <button type="submit" class="register-btn">Cadastrar</button>

        <div class="links">
            Já possui uma conta? <a href="@Url.Action("Index", "Login")">Faça login aqui</a>
        </div>
    </form>
</div>